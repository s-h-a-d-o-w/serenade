{
  "exclude": ["bin/**", "build/**", "dist/**", "out/**", "static/**"],
  "compilerOptions": {
    "target": "esnext",
    "module": "es2022",
    "moduleResolution": "bundler",
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "outDir": "./out",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
  }
}
